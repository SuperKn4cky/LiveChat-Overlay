{
  "name": "livechat",
  "version": "1.0.3",
  "main": "main.js",
  "description": "LiveChat Desktop App",
  "author": "Babz",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.livechat",
    "productName": "LiveChat",
    "files": [
      "main.js",
      "preload.js",
      "protocol.js",
      "renderer/**/*",
      "icon.png",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "artifactName": "LiveChat-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "identity": "-"
    },
    "dmg": {
      "artifactName": "LiveChat-macOS-${arch}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "SuperKn4cky",
        "repo": "LiveChat-Overlay",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.8.3",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.8.1"
  },
  "overrides": {
    "minimatch": "^10.2.2"
  }
}
