{
  "name": "overlay-client",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Overlay Client LiveChat",
  "author": "Babz",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.overlay.client",
    "productName": "Overlay-Client",
    "files": [
      "main.js",
      "preload.js",
      "protocol.js",
      "renderer/**/*",
      "icon.png",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.png"
    },
    "portable": {
      "artifactName": "LiveChat.exe"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "artifactName": "LiveChat-macOS-${arch}.${ext}"
    },
    "zip": {
      "artifactName": "LiveChat-macOS-${arch}.${ext}"
    }
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3"
  }
}
